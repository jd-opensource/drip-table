{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "isolatedModules": false,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "lib": ["dom", "esnext"],
    "listFiles": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "dist",
    "paths": {
      "@/*": ["./*"],
      "@@/*": [".dumi/tmp/*"],
      "drip-table": ["packages/drip-table/lib"],
      "drip-table/*": ["packages/drip-table/lib/*", "*"],
      "drip-table-generator": ["packages/drip-table-generator/lib"],
      "drip-table-generator/*": ["packages/drip-table-generator/lib/*", "*"]
    },
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ESNext",
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "*.ts",
    ".*.ts",
    "*.tsx",
    ".*.tsx",
    "**/*.ts",
    "**/.*.ts",
    "**/*.tsx",
    "**/.*.tsx"
  ]
}
